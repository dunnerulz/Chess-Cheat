{
  "manifest_version": 3,
  "name": "Chess Cheat",
  "version": "1.2",
  "description": "Visual assistance and engine analysis.",
  "permissions": [ "scripting" ],
  "action": {
    "default_title": "Toggle Debug Box"
  },
  "host_permissions": [ "<all_urls>" ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "content.js" ],
      "run_at": "document_idle"
    }
  ]
}